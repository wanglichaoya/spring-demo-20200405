<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id="singletonBean" class="com.javacode.demo03.BeanScopeModel" scope="singleton">
        <constructor-arg index="0" value="singleton"></constructor-arg>
    </bean>
    <bean id="prototypeBean" class="com.javacode.demo03.BeanScopeModel" scope="prototype">
        <constructor-arg index="0" value="prototype"></constructor-arg>
    </bean>
</beans>